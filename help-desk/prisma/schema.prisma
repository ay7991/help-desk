generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      String
}

model User {
  id       Int     @id @default(autoincrement())
  password String
  email    String  @unique
  role     Role
  adminKey String?
}

enum Role {
  USER
  ADMIN
}
